@page
@model NorthwindWeb.Pages.SupplierModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<dev class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr><th>Company Name</th></tr>
            <tr><th>Country</th></tr>
        </thead>
        <tbody>
            @foreach(string name in Model.SuppliersCompanyName)
            {
                <tr><td>@name</td></tr>

            }
        </tbody>
    </table>
</dev>

<div class="row">
    <p>Enter a name for a new supplier:</p>
    <form method="POST">
        <div><input asp-for="Supplier.CompanyName" /></div>
        <input type="submit"/>
    </form>
</div>